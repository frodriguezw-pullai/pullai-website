<svg width="1920" height="1080" viewBox="0 0 1920 1080" fill="none" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="heroGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0A1628;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#1E3A5F;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0A1628;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="1920" height="1080" fill="url(#heroGradient)"/>

  <!-- Abstract data visualization elements -->
  <circle cx="300" cy="200" r="80" stroke="#00D9FF" stroke-width="2" fill="none" opacity="0.3"/>
  <circle cx="1600" cy="800" r="120" stroke="#7C3AED" stroke-width="2" fill="none" opacity="0.2"/>
  <circle cx="800" cy="400" r="60" stroke="#00D9FF" stroke-width="1" fill="none" opacity="0.4"/>

  <!-- Network connections -->
  <line x1="300" y1="200" x2="800" y2="400" stroke="#00D9FF" stroke-width="1" opacity="0.2"/>
  <line x1="800" y1="400" x2="1600" y2="800" stroke="#7C3AED" stroke-width="1" opacity="0.2"/>

  <!-- Data points -->
  <circle cx="300" cy="200" r="5" fill="#00D9FF" opacity="0.8"/>
  <circle cx="800" cy="400" r="5" fill="#7C3AED" opacity="0.8"/>
  <circle cx="1600" cy="800" r="5" fill="#00D9FF" opacity="0.8"/>
  <circle cx="1200" cy="300" r="5" fill="#7C3AED" opacity="0.6"/>
  <circle cx="500" cy="700" r="5" fill="#00D9FF" opacity="0.6"/>

  <!-- Grid pattern -->
  <pattern id="grid" width="50" height="50" patternUnits="userSpaceOnUse">
    <path d="M 50 0 L 0 0 0 50" fill="none" stroke="#00D9FF" stroke-width="0.5" opacity="0.1"/>
  </pattern>
  <rect width="1920" height="1080" fill="url(#grid)"/>
</svg>
